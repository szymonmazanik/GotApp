                <TextView
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_died"
                    android:text="@string/died" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/characterDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/character_titles"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(character.titles.toString())}"
                    tools:text="Placeholder" />

                <TextView
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_titles"
                    android:text="@string/titles" />

            </RelativeLayout>

            <RelativeLayout
