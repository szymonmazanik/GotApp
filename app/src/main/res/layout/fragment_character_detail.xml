                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/character_father"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(character.father)}"
                    tools:text="Placeholder" />

                <TextView
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_father"
                    android:text="@string/father" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/characterDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/character_mother"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(character.mother)}"
                    tools:text="Placeholder" />

                <TextView
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_mother"
                    android:text="@string/mother" />

            </RelativeLayout>

            <RelativeLayout
