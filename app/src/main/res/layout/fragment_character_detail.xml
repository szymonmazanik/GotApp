                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_books"
                    android:text="@string/books" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/characterDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/character_pov_books"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(character.povBooks.toString())}"
                    tools:text="Placeholder" />

                <TextView
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_pov_books"
                    android:text="@string/pov" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/characterDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/character_tv_series"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(character.tvSeries.toString())}"
                    tools:text="Placeholder" />

                <TextView
                    style="@style/profileDetailsMiniText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/character_tv_series"
                    android:text="@string/tv" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/characterDetailsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/character_played_by"
                    style="@style/profileDetailsTextMain"
                    android:layout_width="wrap_content"
